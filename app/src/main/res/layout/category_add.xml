<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    android:background="@drawable/bg_app"
    >


    <ImageView
        android:id="@+id/ivCategoryImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/butten_transparent"
        android:text="Sélectionner l'image"
        android:layout_marginTop="18dp" />
    <EditText
        android:id="@+id/etCategoryName"
        android:layout_width="match_parent"
        android:background="@drawable/inputstyle"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"

        android:layout_height="wrap_content"
        android:hint="Nom de la catégorie" />

    <Button
        android:id="@+id/btnAddCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/butten_transparent"

        android:text="Ajouter la catégorie"
        android:layout_marginTop="70dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btndetailsCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/butten_transparent"

            android:text="details la catégorie"
            android:layout_marginTop="16dp" />
        <Button
            android:id="@+id/togoDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/butten_transparent"
            android:layout_marginLeft="10dp"

            android:text="Dashboard"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</LinearLayout>
